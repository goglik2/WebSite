@model FileModel

<h2>@Model.FileName</h2>

<form asp-action="SaveFile" method="post">
    <input type="text" name="Path" placeholder="Куда хотите сохранить" />
    <textarea asp-for="Content" style="width: 100%; height: 200px;"></textarea>
    <input type="hidden" asp-for="FileName" />
    <button type="submit">Сохранить</button>
</form>